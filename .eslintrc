{
  "extends": "airbnb-base",
  "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
  },
  "env": {
      "node": true,
      "commonjs": true
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "global-require": [
          "error"
      ],
      "handle-callback-err": [
          "error"
      ]
  }
}